#include <dt-bindings/zmk/matrix_transform.h> // Put this with the other includes at the top of your dtsi
#include <physical_layouts.dtsi>

// Physical layout node
/ {
physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "13x6 Ortho";
        transform = <&layout_transform>; // Links to the RC map we made earlier

        keys = <
            // Row 0: F-Keys (y=0)
            &pixel_key 0 0 0 0   &pixel_key 100 0 0 0 &pixel_key 200 0 0 0 &pixel_key 300 0 0 0 &pixel_key 400 0 0 0 &pixel_key 500 0 0 0 &pixel_key 600 0 0 0 &pixel_key 700 0 0 0 &pixel_key 800 0 0 0 &pixel_key 900 0 0 0 &pixel_key 1000 0 0 0 &pixel_key 1100 0 0 0 &pixel_key 1200 0 0 0
            
            // Row 1: Numbers (y=125 creates the gap)
            &pixel_key 0 125 0 0 &pixel_key 100 125 0 0 &pixel_key 200 125 0 0 &pixel_key 300 125 0 0 &pixel_key 400 125 0 0 &pixel_key 500 125 0 0 &pixel_key 600 125 0 0 &pixel_key 700 125 0 0 &pixel_key 800 125 0 0 &pixel_key 900 125 0 0 &pixel_key 1000 125 0 0 &pixel_key 1100 125 0 0 &pixel_key 1200 125 0 0
            
            // Row 2: QWERTY
            &pixel_key 0 225 0 0 &pixel_key 100 225 0 0 &pixel_key 200 225 0 0 &pixel_key 300 225 0 0 &pixel_key 400 225 0 0 &pixel_key 500 225 0 0 &pixel_key 600 225 0 0 &pixel_key 700 225 0 0 &pixel_key 800 225 0 0 &pixel_key 900 225 0 0 &pixel_key 1000 225 0 0 &pixel_key 1100 225 0 0 &pixel_key 1200 225 0 0
            
            // Row 3: Home
            &pixel_key 0 325 0 0 &pixel_key 100 325 0 0 &pixel_key 200 325 0 0 &pixel_key 300 325 0 0 &pixel_key 400 325 0 0 &pixel_key 500 325 0 0 &pixel_key 600 325 0 0 &pixel_key 700 325 0 0 &pixel_key 800 325 0 0 &pixel_key 900 325 0 0 &pixel_key 1000 325 0 0 &pixel_key 1100 325 0 0 &pixel_key 1200 325 0 0
            
            // Row 4: Lower Alpha
            &pixel_key 0 425 0 0 &pixel_key 100 425 0 0 &pixel_key 200 425 0 0 &pixel_key 300 425 0 0 &pixel_key 400 425 0 0 &pixel_key 500 425 0 0 &pixel_key 600 425 0 0 &pixel_key 700 425 0 0 &pixel_key 800 425 0 0 &pixel_key 900 425 0 0 &pixel_key 1000 425 0 0 &pixel_key 1100 425 0 0 &pixel_key 1200 425 0 0
            
            // Row 5: Bottom Row (Skips 4 & 5, Space at 6)
            &pixel_key 0 525 0 0 &pixel_key 100 525 0 0 &pixel_key 200 525 0 0 &pixel_key 300 525 0 0 
            &pixel_key 600 525 0 0 // Spacebar (RC 5,6)
            &pixel_key 700 525 0 0 &pixel_key 800 525 0 0 &pixel_key 900 525 0 0 &pixel_key 1000 525 0 0 &pixel_key 1100 525 0 0 &pixel_key 1200 525 0 0
        >;
    };
};

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
        // Other chosen items
    };
};